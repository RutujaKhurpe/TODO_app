<!-- this is editTask.ejs file to display the page to edit the task -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Task</title>
    <!-- link to the styles sheet present in public folder under styles -->
    <link rel="stylesheet" href="/static/styles/styles.css">  
</head>
<body>
    <div class="container">
        <h1>Edit Task</h1>
        <form action="/tasks/<%= task._id %>?_method=PUT" method="POST" class="task-form">
            <input type="text" name="title" value="<%= task.title %>" required>  <!--renders the title of task-->
            <textarea name="description"><%= task.description %></textarea>
            <button type="submit">Confirm Update</button>
            <a href="/tasks" class="cancel">Cancel</a>         <!--if cancel then it is directed to the primary page-->
        </form>
    </div>
</body>
</html>
