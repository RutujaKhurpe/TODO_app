<!-- this is primary display page, for adding task, display task, delete task  -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <!-- link to the styles sheet present in public folder under styles -->
    <link rel="stylesheet" href="/static/styles/styles.css">
</head>

<body>
    <div class="container">
        <h1>To-Do List</h1>

        <!-- Display existing tasks -->
        <ul class="task-list">
            <% tasks.forEach(task=> { %>
                <li class="<%= task.status %>">
                    <h3>
                        <%= task.title %>
                    </h3>
                    <p>
                        <%= task.description %>
                    </p>
                    <small>Status: <%= task.status %></small>
                    <div class="task-actions">
                        <a href="/tasks/<%= task._id %>/edit" class="edit-btn">Edit</a>  <!--edit button display-->
                        <form action="/tasks/<%= task._id %>?_method=DELETE" method="POST">   <!--render the api for delete-->
                            <button type="submit" class="delete-btn">Delete</button><!--delete button display-->
                        </form>
                    </div>
                </li>
                <% }) %>
        </ul>

        <!-- Add new task form -->
        <form action="/tasks" method="POST" class="task-form">
            <input type="text" name="title" placeholder="Task Title" required>
            <textarea name="description" placeholder="Task Description"></textarea>
            <button type="submit">Add Task</button>
            <h5>If liked my project, please email me @ rutujakhurpe99@gmail.com</h5>
            <h5>Mobile:7892745266</h5>
        </form>
    </div>
</body>

</html>